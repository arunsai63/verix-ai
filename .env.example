# VerixAI Environment Configuration

# LLM Provider Selection (ollama, openai, claude)
# Ollama is the default for local, private AI processing
LLM_PROVIDER=ollama
EMBEDDING_PROVIDER=ollama

# Ollama Configuration (Default - Local AI)
# No API keys required! Runs completely locally
OLLAMA_CHAT_MODEL=llama3.2
OLLAMA_EMBEDDING_MODEL=nomic-embed-text

# OpenAI Configuration (Optional)
# Uncomment and add your key to use OpenAI
# OPENAI_API_KEY=your-openai-api-key-here
# OPENAI_CHAT_MODEL=gpt-4-turbo-preview
# OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# Claude Configuration (Optional)
# Uncomment and add your key to use Claude
# CLAUDE_API_KEY=your-claude-api-key-here
# CLAUDE_CHAT_MODEL=claude-3-opus-20240229

# Security
SECRET_KEY=your-secret-key-here-change-in-production

# Database
POSTGRES_USER=verixai
POSTGRES_PASSWORD=verixai_password
POSTGRES_DB=verixai_db

# Application
DEBUG=False
LOG_LEVEL=INFO
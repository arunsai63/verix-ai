# Application Settings
APP_NAME=VerixAI
APP_VERSION=0.1.0
DEBUG=False
LOG_LEVEL=INFO

# Server Configuration
HOST=0.0.0.0
PORT=8000
WORKERS=4

# CORS Settings
CORS_ORIGINS=["http://localhost:3000"]

# Database
DATABASE_URL=postgresql+asyncpg://user:password@localhost/verixai

# Vector Store
VECTOR_STORE_TYPE=chromadb
CHROMA_PERSIST_DIRECTORY=./chroma_db
CHROMA_COLLECTION_NAME=verixai_documents

# LLM Provider Selection (ollama, openai, claude)
LLM_PROVIDER=ollama
EMBEDDING_PROVIDER=ollama

# Ollama Configuration (Default Provider)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_CHAT_MODEL=llama3.2
OLLAMA_EMBEDDING_MODEL=nomic-embed-text

# OpenAI Configuration (Optional)
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_CHAT_MODEL=gpt-4-turbo-preview
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# Claude Configuration (Optional)
CLAUDE_API_KEY=your-claude-api-key-here
CLAUDE_CHAT_MODEL=claude-3-opus-20240229

# Upload Settings
MAX_UPLOAD_SIZE=104857600  # 100MB
ALLOWED_EXTENSIONS=pdf,docx,pptx,html,txt,md,csv,xlsx

# Security
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Storage
UPLOAD_DIRECTORY=./uploads
DATASETS_DIRECTORY=./datasets